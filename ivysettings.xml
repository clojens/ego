<ivysettings>
    <settings defaultResolver="chained"/>
    <property name="java.net.maven.pattern" value="[organisation]/jars/[module]-[revision].[ext]"/>
    <resolvers>
        <chain name="chained" returnFirst="true">
          <filesystem name="local">
            <artifact pattern="lib/[artifact].[ext]"  />
          </filesystem>
          <ibiblio name="ibiblio" m2compatible="true"/>
          <ibiblio name="java-net-maven1" root="http://download.java.net/maven/1" pattern="${java.net.maven.pattern}" m2compatible="false"/>
          <ibiblio name="java-net-maven2" root="http://download.java.net/maven/2/" m2compatible="true"/>
          <ibiblio name="jboss" m2compatible="true" usepoms="false" root="http://repository.jboss.org/maven2" pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
          <ibiblio name="contrib" root="http://tapestry.formos.com/maven-snapshot-repository" pattern="[organisation]/[module]/[revision]/[artifact]-1.0-20090624.082840-42.[ext]" m2compatible="true"/>
          <ibiblio name="clojure" root="http://tapestry.formos.com/maven-snapshot-repository" pattern="[organisation]/[module]/[revision]/[artifact]-1.1.0-alpha-20090624.082905-21.[ext]" m2compatible="true"/>
        </chain>
    </resolvers>
</ivysettings>
